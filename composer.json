{
    "name": "madnest/madstore-gopay",
    "description": "Madstore GoPay",
    "keywords": [
        "madnest",
        "madstore-gopay",
        "laravel",
        "ecommerce",
        "payment-gateway"
    ],
    "homepage": "https://github.com/madnest/madstore-gopay",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jakub Theimer",
            "email": "theimer@madne.st",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "laravel/framework": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "madnest/laravel-gopay": "^1.0",
        "madnest/madstore-framework": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "orchestra/testbench": "^5.1",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Madnest\\MadstoreGopay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madnest\\MadstoreGopay\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Madnest\\MadstoreGopay\\MadstoreGopayServiceProvider"
            ],
            "aliases": {
                "MadstoreGopay": "Madnest\\MadstoreGopay\\MadstoreGopayFacade"
            }
        }
    }
}
