{
    "name": "madnest/madstore-gopay",
    "description": "Madstore GoPay",
    "keywords": [
        "madnest",
        "madstore-gopay",
        "laravel",
        "ecommerce",
        "payment-gateway"
    ],
    "homepage": "https://github.com/madnest/madstore-gopay",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jakub Theimer",
            "email": "theimer@madne.st",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "laravel/framework": "^7.0",
        "illuminate/support": "^6.18|^7.0",
        "madnest/laravel-gopay": "^1.0",
        "madnest/madstore-framework": "dev-master"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "orchestra/testbench": "^5.1",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Madnest\\MadstoreGopay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madnest\\MadstoreGopay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Madnest\\MadstoreGopay\\MadstoreGopayServiceProvider"
            ],
            "aliases": {
                "MadstoreGopay": "Madnest\\MadstoreGopay\\MadstoreGopayFacade"
            }
        }
    },
    "repositories": {
        "local": {
            "type": "path",
            "url": "../madstore-framework"
        }
    }
}